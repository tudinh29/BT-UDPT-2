doctype html
html
	head
		title= title
	link(rel='stylesheet', href='/stylesheets/bootstrap.css')
	link(rel='stylesheet', href='/stylesheets/style.css')
	link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
	script(src='/javascripts/jquery.js')
	script(src='/javascripts/bootstrap.js')
	
	body
		nav.navbar.navbar-default.navbar-fixed-top
			.container
				.navbar-header
					button.navbar-toggle.collapsed(type='buttom', data-toggle='collapse', data-target='#navbar',aria-expanded='false', aria-controls='navbar')
						span.sr-only Toggle Navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='#') UDPT
				#navbar.collapse.navbar-collapse
					ul.nav.navbar-nav
						if infoUser
							li(class=(title == 'Messages' ? 'active': ''))
									a(href='/users/index') Messages
					ul.nav.navbar-nav.navbar-right
						if !infoUser
							li
								a(href='/') Log In
							li
								a(href='/users/register') Register
						if infoUser
							li
								a(href='/users/logout') Logout
			.container

				block content

	




