extends layout

block content
	h1 Login
	include message
	form(method='post',action='/users/login')
		.form-group
			label Email
			input.form-control(name='email', type='text')
		.form-group
			label Password
			input.form-control(name='password', type='password')
		input.bt(name='submit', type='submit', value='Login')
		input.bt1(name='submit1', type='submit', value='Facebook')
